{
  "name": "@jamie-bitflight/git-forensics-mcp",
  "version": "0.5.1",
  "description": "MCP server for deep git repository analysis and investigation, providing insights into branch relationships, merge strategies, and development patterns",
  "type": "module",
  "main": "build/index.js",
  "bin": {
    "git-forensics-mcp": "./build/index.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Jamie-BitFlight/git-forensics-mcp.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc && chmod +x build/index.js",
    "start": "ts-node src/index.ts",
    "inspect:method": "mcp-inspector --cli pnpm start --method",
    "tools:list": "pnpm inspect:method tools/list",
    "prepare": "husky",
    "prettier": "prettier",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json,md}\""
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "latest"
  },
  "devDependencies": {
    "ts-node": "^10.9.2",
    "@modelcontextprotocol/inspector": "^0.17.1",
    "@nx/js": "21.6.5",
    "@swc-node/register": "~1.11.1",
    "@swc/core": "~1.13.5",
    "@swc/helpers": "~0.5.17",
    "@types/node": "^22.0.0",
    "husky": "^9.1.7",
    "nx": "21.6.5",
    "prettier": "^3.6.2",
    "typescript": "^5.0.0"
  },
  "nx": {}
}
